{% extends 'layout/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <div class="d-flex">
        <img class="mx-3 mt-4" style="max-width: 200px; max-height: 150px" src="{{ asset('data/uploads/avatars/' ~ user.avatarFilename) }}" alt="{{ user.avatarFilename }}"/>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Avatar File</th>
                    <td><a href="{{ asset('data/uploads/avatars/' ~ user.avatarFilename) }}">{{ user.avatarFilename }} </a></td>
                </tr>
                {# <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr> #}
                <tr>
                    <th>IsVerified</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    

<a href="{{ path('app_user_edit', {'id': user.id|raw}) }}">edit</a>



    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
